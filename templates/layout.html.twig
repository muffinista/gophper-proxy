  <head>
    <meta charset="utf-8">
    <title>{{ title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ description }}">
    <meta name="author" content="">

    <link href="{{ asset('css/gophper.css') }}" media="screen, projector, print" rel="stylesheet" type="text/css" />
    <base href="./" />
  </head>

  <body>
    <nav class="top-bar">
      <ul>
        <li class="name">
          <h1><a href="/">{{ title }}</a><small>{{ subtitle }}</small></h1>
        </li>
        {% if about_path %}
        <li><a href="{{ about_path }}">About</a></li>
        {% endif %}
      </ul>

      <form class="gopher-uri">
	      <input type="text" name="uri" placeholder="URL" />
	      <button type="submit" class="button">go</button>
	    </form>
    </nav>

    <div class="container">
	    <div id="breadcrumb">
        {% if breadcrumb is defined %}
          <ul>
            {% for chunk in breadcrumb %}
              <li><a href="{{ chunk.href }}">{{ chunk.value }}</a></li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
      <main>
        {% if intro is defined %}
	      <div id="intro" class="<?php echo $class ?>">
          {{ intro|raw }}
        </div>
        {% endif %}
        
        <div id="gopher" {% if image is defined %}data-parse="false"{% endif %}>
          {% if image is defined %}
            <img src="data:image/png;base64,{{ image }}" />
          {% endif %}

          {% if data is defined %}
    	      {{ data }}
          {% endif %}
        </div>
      </main>
      
      <footer id="footer">
	      <p>Gophper &copy; {{ date }} <a href="http://muffinlabs.com/">Colin
	        Mitchell</a>. Content delivered via Gophper belongs to its
	        original authors.
        </p>
      </footer>
    </div>
    
    <script src="{{ asset('js/gopher.js') }}"></script>

    <template id="row-link-template"><div class="row link"><svg class="icon shape-codepen"><use xlink:href="#icon-exclamation-sign"></use></svg><a href=""></a></div></template>
    <template id="row-text-template"><div class="row text"><span></span></div></template>
    <template id="row-form-template"><div class="row form"><svg class="icon shape-codepen"><use xlink:href="#icon-exclamation-sign"></use></svg><form method="post" action="" class="form-inline">
